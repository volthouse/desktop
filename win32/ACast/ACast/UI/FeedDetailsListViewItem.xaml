<Button
    x:Class="ACast.FeedDetailsListViewItem"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ACast"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d" Height="100" Width="Auto" HorizontalContentAlignment="Stretch" BorderBrush="Transparent">

    <Grid x:Name="mainGrid" Margin="0,0,0,5">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="60*"/>
            <ColumnDefinition Width="20*"/>
            <ColumnDefinition Width="20*"/>
        </Grid.ColumnDefinitions>
        <TextBlock x:Name="textBox" Margin="0" TextWrapping="Wrap" Text="TextBlock" ScrollViewer.VerticalScrollBarVisibility="Disabled" FontSize="14" HorizontalAlignment="Left"/>
        <AppBarButton x:Name="pickButton" HorizontalAlignment="Right" Icon="Pin" Label="" VerticalAlignment="Stretch" Width="80" Click="pickButton_Click" Grid.Column="1"/>
        <AppBarButton x:Name="playButton" HorizontalAlignment="Right" Icon="Play" Label="" VerticalAlignment="Stretch" Grid.Column="2" Width="80" Click="playButton_Click"/>
    </Grid>


</Button>
