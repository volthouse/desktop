<Page
    x:Class="ACast.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ACast"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">    
    <Page.BottomAppBar>

        <CommandBar>
            <CommandBar.SecondaryCommands>
                <AppBarButton x:Name="removeFeedsButton" Label="Remove Feeds"/>
                <AppBarButton x:Name="clearAllButton" Label="Clear All"/>
            </CommandBar.SecondaryCommands>


            <AppBarButton x:Name="addFeedButton" Icon="Add" Label="Edit Feeds"/>
            <AppBarButton x:Name="playButton" Icon="Play" Label="Play"/>
            <AppBarButton x:Name="playerControlButton" Label="Player" Icon="Audio">
                <AppBarButton.Flyout>
                    <local:CustomFlyout Placement="Full">
                        <local:PlayerControl x:Name="playerControl"/>
                    </local:CustomFlyout>
                </AppBarButton.Flyout>

            </AppBarButton>
        </CommandBar>
    </Page.BottomAppBar>
    <Pivot Title="Pivot">
        <PivotItem Header="Feeds">
            <Grid>
                <ListView x:Name="feedListView" IsItemClickEnabled="True"/>
            </Grid>            
        </PivotItem>
        <PivotItem Header="Items">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="67*"/>
                    <RowDefinition Height="379*"/>
                </Grid.RowDefinitions>
                <AppBarButton x:Name="refreshButton" HorizontalAlignment="Right" Icon="Refresh" Label="" VerticalAlignment="Stretch" Width="80" Margin="0,0,0,66.667"/>
                <ListView x:Name="feedItemsListView" IsItemClickEnabled="True" Grid.Row="1" Margin="0,0.333,0,-2.167"/>
            </Grid>
        </PivotItem>
        <PivotItem Header="Player">
            <Grid>

            </Grid>
        </PivotItem>
    </Pivot>


</Page>
