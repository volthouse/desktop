<UserControl
    x:Class="ACast.FeedDetailsListItem"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ACast"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d" Height="78" Width="Auto" HorizontalContentAlignment="Stretch">

    <Grid x:Name="grid" Margin="0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300*"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <TextBlock x:Name="textBox" Margin="0,2,0,0" TextWrapping="Wrap" Text="TextBlock" ScrollViewer.VerticalScrollBarVisibility="Disabled" HorizontalAlignment="Left" Width="120"/>
        <AppBarButton x:Name="pickButton" HorizontalAlignment="Right" Icon="Pin" Label="" VerticalAlignment="Stretch" Width="80" Click="pickButton_Click" Grid.Column="1"/>
        <AppBarButton x:Name="playButton" HorizontalAlignment="Right" Icon="Play" Label="" VerticalAlignment="Stretch" Grid.Column="2" Width="80" Click="playButton_Click"/>
    </Grid>


</UserControl>
